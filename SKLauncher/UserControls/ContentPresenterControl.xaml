<UserControl
    x:Class="Launcher.UserControls.ContentPresenterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Launcher.Core.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Launcher.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Foreground="{DynamicResource ThemeForegroundBrush}"
    TextOptions.TextRenderingMode="ClearType"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <i:Interaction.Behaviors>
            <behaviors:AcrylicControlBehavior AdjustmentLevel="OnSetup" VisualContext="Control" />
        </i:Interaction.Behaviors>

        <ContentPresenter Grid.Row="0" Content="{Binding Content}" />
        <Button
            Grid.Row="1"
            Command="{Binding CloseCommand}"
            Content="Cancel"
            Style="{DynamicResource PresenterDialogCancelButton}" />
    </Grid>
</UserControl>
