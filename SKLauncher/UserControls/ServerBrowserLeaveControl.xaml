<UserControl
    x:Class="Launcher.UserControls.ServerBrowserLeaveControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="450"
    Padding="10"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Text="{DynamicResource uc_ServerBrowserLeaveMainText}"
            TextWrapping="WrapWithOverflow" />
        <CheckBox
            Grid.Row="1"
            Margin="5"
            Content="{DynamicResource uc_ServerBrowserLeaveCheckBox}"
            IsChecked="{Binding DisableAsk, Mode=TwoWay}" />
    </Grid>
</UserControl>
